<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/color_accent</item>
        <item name="titleTextColor">?attr/backgroundColor</item>
        <item name="android:textColorPrimary">?attr/negativeTextColor</item>
        <item name="android:textColorSecondary">?attr/greyTextColor</item>
        <item name="android:textAppearanceSmall">@style/textAppearanceSmall</item>
        <item name="android:windowBackground">?attr/backgroundColor</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">?attr/greyTextColor</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">?attr/lightGreyTextColor</item>
    </style>

    <style name="LightTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/color_primary_dark</item>
        <item name="colorPrimaryDark">@color/color_primary_light</item>
        <item name="negativeTextColor">@android:color/black</item>
        <item name="backgroundColor">@android:color/white</item>
        <item name="greyTextColor">@color/dark_grey</item>
        <item name="lightGreyTextColor">@color/light_grey</item>
    </style>

    <style name="DarkTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/color_primary_light</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="negativeTextColor">@android:color/white</item>
        <item name="backgroundColor">@android:color/black</item>
        <item name="greyTextColor">@color/light_grey</item>
        <item name="lightGreyTextColor">@color/dark_grey</item>
    </style>

    <style name="textAppearanceLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">?attr/backgroundColor</item>
    </style>

    <style name="textAppearanceSmall" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">?attr/greyTextColor</item>
    </style>

</resources>
