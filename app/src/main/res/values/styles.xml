<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:actionBarStyle">@style/BaseTheme.ActionBarStyle</item>
        <item name="android:textColorPrimary">?attr/textColor</item>
        <item name="android:textColorSecondary">?attr/greyTextColor</item>
        <item name="android:textAppearanceSmall">@style/textAppearanceSmall</item>
        <item name="android:windowBackground">?attr/darkTextColor</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">?attr/greyTextColor</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">?attr/lightGreyTextColor</item>
    </style>

    <style name="BaseTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="LightTheme" parent="BaseTheme">
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimary">@color/color_primary_light</item>
        <item name="textColor">@android:color/black</item>
        <item name="darkTextColor">@android:color/white</item>
        <item name="greyTextColor">@color/dark_grey</item>
        <item name="lightGreyTextColor">@color/light_grey</item>
    </style>

    <style name="DarkTheme" parent="BaseTheme">
        <item name="colorPrimaryDark">@color/color_primary_light</item>
        <item name="colorPrimary">@color/color_primary_dark</item>
        <item name="textColor">@android:color/white</item>
        <item name="darkTextColor">@android:color/black</item>
        <item name="greyTextColor">@color/light_grey</item>
        <item name="lightGreyTextColor">@color/dark_grey</item>
    </style>

    <style name="textAppearanceLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="textAppearanceSmall" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">?attr/greyTextColor</item>
    </style>

</resources>
